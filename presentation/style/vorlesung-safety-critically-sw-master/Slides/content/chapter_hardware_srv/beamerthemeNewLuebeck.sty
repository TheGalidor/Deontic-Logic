%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Fonts and Spacing %%%
%%%%%%%%%%%%%%%%%%%%%%%%%

% Palatino is closest to official Myriad font, which is not available to LaTeX
\usepackage{palatino}

% Use serif font in math mode
%\usefonttheme[onlymath]{serif}
\usefonttheme{serif}

%\fontfamily{ppl}
%\fontsize{<font size>}{<value for \baselineskip>}\selectfont
%\fontsize{9pt}{10pt}
%\selectfont

\setbeamerfont{title}{series=\rmfamily,size={\fontsize{14}{0}}}
\setbeamerfont{institute}{series=\rmfamily, size={\fontsize{7}{7}}}
\setbeamerfont{date}{series=\rmfamily, size={\fontsize{7}{0}}}


% Line spacing
%\usepackage{setspace}
%\setstretch{1.5}
%\setlength{\parindent}{0pt}
%\renewcommand*\arraystretch{1.5}

\setbeamerfont{frametitle}{series=\bfseries\rmfamily,size={\fontsize{14}{0}}}
% Make frametitle smaller
%\setbeamerfont{frametitle}{series=\bfseries,size={\fontsize{9}{0}}}

% Fix for beamer font
\let\Tiny=\tiny

%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Color/Visual Style %%%
%%%%%%%%%%%%%%%%%%%%%%%%%%

% Base colors
\definecolor{oceangreen}{RGB}{0,75,90}
\colorlet{lightoceangreen}{oceangreen!20!white}
\colorlet{myred}{red!60!black!90}
\colorlet{mygreen}{green!30!black}


% Layout colors
\setbeamercolor*{structure}{fg=oceangreen,bg=lightoceangreen}
\setbeamercolor*{background canvas}{bg=white}
\setbeamercolor*{alerted text}{fg=myred}

% Uncovering
%\setbeamercovered{dynamic}
%\setbeamercovered{transparent=15}

% TikZ
\usepackage{tikz}
\tikzstyle{node} = [shape=circle,draw,fill=oceangreen!20,inner sep=2pt, minimum width=4pt]
\tikzstyle{box} = [shape=rectangle,draw,fill=oceangreen!20,inner sep=2pt,minimum width=3cm,minimum height=1cm]


% Block style
\setbeamertemplate{blocks}[rounded]
\setbeamercolor{block title}{use=structure}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!50!bg}
\setbeamercolor*{block title alerted}{use=structure,fg=myred!70!black,bg=myred!30}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor*{block title example}{use=structure,fg=mygreen,bg=mygreen!30}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg} 


%%%%%%%%%%%%%%%%%%%%%%%%
%%% Layout/Structure %%%
%%%%%%%%%%%%%%%%%%%%%%%%

% Title page
\setbeamertemplate{title page}{
  \tikz [remember picture,overlay]
      \node at
          (current page.north west) 
          %or: (current page.center)
          [anchor = north west, yshift=-2ex, xshift=2ex]{%
            \includegraphics[height=3em]{isp_uni_en_for}
          };

  \tikz [remember picture,overlay]
      \node at
          (current page.north east) 
          %or: (current page.center)
          [anchor = north east, yshift=-3ex, xshift=-3ex]{%
            \includegraphics[height=2.5em]{isp}
          };    

  \bigskip
  \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par
  \usebeamerfont{subtitle}\insertsubtitle\par
  \bigskip
  \usebeamerfont{author}\color{black}\insertauthor\par
  \bigskip
  \usebeamerfont{institute}\insertinstitute\par
  \bigskip
  \usebeamercolor[fg]{titlegraphic}\inserttitlegraphic
  \vfill
  \usebeamerfont{date}\color{black}\insertdate
  %
  %\addtocounter{framenumber}{-1}
  % how to get rid of the footer?
  %\setbeamertemplate{footline}{}
  %
}

% Headline
%\defbeamertemplate*{headline}{infolines theme}{}

% Frametitle
\setbeamertemplate{frametitle}{%
  %\begin{beamercolorbox}[wd=\paperwidth, ht=1ex]{}
  %\hrule
  %\end{beamercolorbox}
  \begin{beamercolorbox}[wd=\paperwidth,left,ht=3.25ex, dp=1ex]{}%
    \hspace*{2ex} \insertframetitle \hspace*{2ex}
  \end{beamercolorbox}%
}%

% Footline
\setbeamertemplate{footline}{
  \leavevmode%
  \color{oceangreen}
    \hrule
  \begin{beamercolorbox}[ht=1em,dp=1ex]{}%
    % Author (short)
    \begin{beamercolorbox}[wd=.33\paperwidth,ht=1em,left]{}%
      \color{oceangreen}
      \usebeamerfont{author in head/foot}\hspace*{2ex}\insertshortauthor%
    \end{beamercolorbox}%
    % Date (short)
    \begin{beamercolorbox}[wd=.33\paperwidth,ht=1em,center]{}%
      \color{oceangreen}
      \usebeamerfont{date in head/foot}\insertshortdate{}%
    \end{beamercolorbox}%
    % Current frame number and total frame number
    \begin{beamercolorbox}[wd=.33\paperwidth,ht=1em,right]{}%
      \color{oceangreen}
      \usebeamerfont{framenumber in head/foot}\textbf{\insertframenumber{}}%/%
      %\inserttotalframenumber{}\hspace*{2ex}%
      \hspace*{4ex}%
    \end{beamercolorbox}%
  \end{beamercolorbox}%
  \vskip0pt%
}%


% Disable Navigation symbols
\setbeamertemplate{navigation symbols}{}

\mode<all>

